@{
    ViewData["Title"] = "Recuperar Contraseña";
}

@using Newtonsoft.Json.Linq
@model ProyectoFinal_C.Models.Usuario

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Recuperar Contraseña</title>
    <link rel="stylesheet" href="~/css/login_registro.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="form-container">
        <form asp-controller="Controlador_Recuperar" asp-action="RecuperarContrasena" method="post">
            <h2 class="text-center mb-4">Recuperar Contraseña <i class="bi bi-shield-lock"></i></h2>
            <div class="form-group">
                <label asp-for="email_usuario"><i class="bi bi-envelope"></i>Email</label>
                <input asp-for="email_usuario" type="email" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-dark btn-block">Enviar Correo de Recuperación</button>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <div>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        var errorMessage = JObject.Parse(error.ErrorMessage)["mensaje"]?.ToString();
                        if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <li>@errorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>


