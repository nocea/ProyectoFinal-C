@{
    ViewData["Title"] = "Login";
}

@using Newtonsoft.Json.Linq
@model ProyectoFinal_C.Models.Usuario

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Formulario de Login</title>
    <link rel="stylesheet" href="~/css/login_registro.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="form-container">
        <form asp-controller="Controlador_Login" asp-action="InicioSesion" method="post">
            <h2 class="text-center mb-4">Iniciar Sesión en BlogShip <i class="bi bi-rocket-takeoff"></i></h2>
            <div class="form-group">
                <label asp-for="email_usuario"><i class="bi bi-person"></i>Email</label>
                <input asp-for="email_usuario" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label asp-for="passwd_usuario"><i class="bi bi-asterisk"></i>Contraseña</label>
                <div class="input-group">
                    <input asp-for="passwd_usuario" type="password" class="form-control" required>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword">Mostrar</button>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-dark btn-block">Iniciar Sesión</button>
            <a asp-controller="Controlador_Recuperar" asp-action="RecuperarContraseña" class="btn btn-link">¿Olvidaste tu contraseña?</a>
            <a asp-controller="Controlador_Registro" asp-action="Registro" class="btn btn-link">¿No se ha registrado?</a>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <div>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        var errorMessage = JObject.Parse(error.ErrorMessage)["mensaje"]?.ToString();
                        if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <li>@errorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var passwordInput = document.querySelector('input[name="passwd_usuario"]');
            var togglePasswordButton = document.getElementById('togglePassword');

            togglePasswordButton.addEventListener('click', function () {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    togglePasswordButton.textContent = 'Ocultar';
                } else {
                    passwordInput.type = 'password';
                    togglePasswordButton.textContent = 'Mostrar';
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>


