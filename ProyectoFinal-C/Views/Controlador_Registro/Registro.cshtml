@{
    ViewData["Title"] = "Registro";

}
@using Newtonsoft.Json.Linq
@model ProyectoFinal_C.Models.Usuario
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BlogShip</title>
    <link rel="stylesheet" href="~/css/login_registro.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="form-container">
        <form asp-controller="Controlador_Registro" asp-action="RegistrarUsuario" method="post">
            <h2 class="text-center mb-4">Registrate en BlogShip <i class="bi bi-rocket-takeoff"></i>!</h2>
            <div class="form-group">
                <label asp-for="nombreCompleto_usuario"><i class="bi bi-caret-right"></i>Nombre Completo</label>
                <input asp-for="nombreCompleto_usuario" type="text" class="form-control" placeholder="Juan García Pérez" required>
            </div>
            <div class="form-group">
                <label asp-for="movil_usuario"><i class="bi bi-caret-right"></i>Teléfono</label>
                <input asp-for="movil_usuario" type="text" class="form-control" placeholder="" required pattern="[0-9]{9}">
            </div>
            <div class="form-group">
                <label asp-for="alias_usuario"><i class="bi bi-person"></i>Alias de Usuario</label>
                <input asp-for="alias_usuario" type="text" class="form-control"placeholder="'juangarper'" required>
                
            </div>
            <div class="form-group">
                <label asp-for="email_usuario"><i class="bi bi-envelope-at"></i>Email</label>
                <input asp-for="email_usuario" type="email" class="form-control"placeholder="juangarcia@gmail.com" required>
            </div>
            <div class="form-group">
                <label asp-for="passwd_usuario"><i class="bi bi-asterisk"></i>Contraseña</label>
                <div class="input-group">
                    <input asp-for="passwd_usuario" type="password" class="form-control" pattern="^(?=.*[A-Z])(?=.*\d).{8,}$" required>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword">Mostrar</button>
                    </div>
                </div>
                <small id="passwordHelp" class="form-text text-muted">
                    La contraseña debe contener al menos 8 carácteres,una letra mayúscula y un número.
                </small>
                <small id="passwordHelp" class="form-text text-muted">
                    El número de teléfono tiene que tener 9 digitos(0-9).
                </small>
            </div>
            <button type="submit" class="btn btn-dark btn-block">Registrar</button>
        </form>
    </div>
     <script>
        document.addEventListener('DOMContentLoaded', function () {
            var passwordInput = document.querySelector('input[name="passwd_usuario"]');
            var togglePasswordButton = document.getElementById('togglePassword');

            togglePasswordButton.addEventListener('click', function () {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    togglePasswordButton.textContent = 'Ocultar';
                } else {
                    passwordInput.type = 'password';
                    togglePasswordButton.textContent = 'Mostrar';
                }
            });
        });
    </script> 

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html> 
